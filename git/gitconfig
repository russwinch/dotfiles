[alias]
    adog = log --oneline --decorate --all --graph
    olog = log --oneline
    fpush = push --force-with-lease
    cdiff = diff --cached
    last = rev-parse --short head
    co = checkout
    br = branch
[rerere]
    enabled = true
[merge]
    tool = vimdiff
[mergetool "vimdiff"]
    path = nvim
[mergetool]
    keepBackup = false
[core]
    excludesfile = ~/.dotfiles/git/gitignore_global
