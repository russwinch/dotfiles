[alias]
	adog = log --oneline --decorate --all --graph
	olog = log --oneline
    fpush = push --force-with-lease
    cdiff = diff --cached
[rerere]
	enabled = true
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
[mergetool]
	keepBackup = false
[core]
	excludesfile = ~/.dotfiles/git/gitignore_global
